#include <iostream>
#include <fstream>
#include <string>

using namespace std;

struct trivialTree
{
  char letter[1];
  int freq;
};
const int N_ASCII_VALUES = 128;

int main (int argc, char *argv[]) {
  string line;
  string FileName;
  FileName = argv[1];
  unsigned char ch;
  int frequencies[N_ASCII_VALUES];
  ifstream inFile (FileName); 
  if (!inFile.is_open()){
    cout << "The input file could not be opened."<<endl;
    return 1;
  }

  for (int k = 0; k < n; k++){
    frequencies[k] = 0;//initialize
  }

  ch = inFile.get();
  while (!inFile.eof()){
    ch = toupper(ch);
    frequencies[ch]++;
    ch = inFile.get();
  }
  inFile.close();   
  for(unsigned char ch = 'A';ch <= 'Z'; ch++){
    cout<<ch<<": "<<frequencies[ch]<<endl;
}
  
  return 0;
}
